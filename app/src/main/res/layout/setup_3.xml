<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Step Final Title -->
    <TextView
        android:id="@+id/step_three_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step Final"
        android:background="@color/text_color_black"
        android:textSize="40sp"
        android:textColor="@android:color/white" />

    <!-- Container for side-by-side layout -->
    <RelativeLayout
        android:id="@+id/download_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/step_three_title"
        android:layout_marginTop="20dp">

        <!-- Download Playlist TextView -->
        <TextView
            android:id="@+id/download_playlist_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:text="Download Playlist:"
            android:textSize="18sp"
            android:background="@color/text_color_black"
            android:textColor="@android:color/white" />


        <!-- Download Button -->
        <Button
            android:id="@+id/download_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Download"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:onClick="onDownloadButtonClick" />
    </RelativeLayout>

</RelativeLayout>
