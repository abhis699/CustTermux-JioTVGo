<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/text_color_black"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/text_color_black"
        android:paddingBottom="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchisLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:checked="true"
            app:track="@drawable/sw_track"
            android:thumb="@drawable/sw_thumb" />

        <LinearLayout
            android:layout_toStartOf="@id/switchisLocal"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:text="Use Server Publicly"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:text="Enable access to the server from other devices"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/color_gray"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchAutoboot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:checked="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:track="@drawable/sw_track"
            android:thumb="@drawable/sw_thumb" />


        <LinearLayout
            android:layout_toStartOf="@id/switchAutoboot"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:text="Auto-Start on Boot"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:text="Launch app automatically when device starts up"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/color_gray"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchLoginCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:checked="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:track="@drawable/sw_track"
            android:thumb="@drawable/sw_thumb" />


        <LinearLayout
            android:layout_toStartOf="@id/switchLoginCheck"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:text="Login Check on Start"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:text="Check for login on start"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/color_gray"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchAutostart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:checked="true"
            app:track="@drawable/sw_track"
            android:thumb="@drawable/sw_thumb" />

        <LinearLayout
            android:layout_toStartOf="@id/switchAutostart"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:text="Auto-Start IPTV"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:text="Automatically launch IPTV when the app starts"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/color_gray"/>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/IPTVbtnlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/IPTVbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white"
            android:text="Select" />

        <LinearLayout
            android:layout_toStartOf="@id/IPTVbtn"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:text="IPTV app selection"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:text="Select app here"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/color_gray"/>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <Button
            android:id="@+id/restartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="🔄️ Restart App"
            android:padding="5dp"
            android:textColor="@android:color/white" />

    </RelativeLayout>



</LinearLayout>
